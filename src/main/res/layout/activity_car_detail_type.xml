<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_10"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.coco3g.daishu.activity.CarDetailTypeActivity">

    <com.coco3g.daishu.view.TopBarView
        android:id="@+id/topbar_cat_detail_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.coco3g.daishu.view.TopBarView>

    <com.coco3g.daishu.view.SuperRefreshLayout
        android:id="@+id/sr_car_detail_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topbar_cat_detail_type"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <ListView
            android:id="@+id/listview_car_detail_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        </ListView>
    </com.coco3g.daishu.view.SuperRefreshLayout>
</RelativeLayout>
