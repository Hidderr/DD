<?xml version="1.0" encoding="utf-8"?>
<com.coco3g.daishu.view.SuperRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/superrefresh_read"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color_10">

        <LinearLayout
            android:id="@+id/linear_goods_frag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.coco3g.daishu.view.BannerView
                android:id="@+id/banner_read_frag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/linear_read_boardcast_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="商城头条"
                    android:textColor="@color/text_color_red_3"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/text_color_8" />

                <!--<TextView-->
                <!--android:id="@+id/tv_read_boardcast"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="广播滚动"-->
                <!--android:textColor="@color/text_color_6"-->
                <!--android:textSize="14sp" />-->

                <com.sunfusheng.marqueeview.MarqueeView
                    android:id="@+id/tv_read_boardcast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mvAnimDuration="1000"
                    app:mvInterval="3000"
                    app:mvSingleLine="true"
                    app:mvTextColor="@color/text_color_red_2"
                    app:mvTextSize="14sp">

                </com.sunfusheng.marqueeview.MarqueeView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_read_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:weightSum="2">

                    <com.coco3g.daishu.view.HomeMenuImageView
                        android:id="@+id/view_read_menu_1"
                        android:layout_width="0dp"
                        android:padding="12dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/text_color_10" />

                    <com.coco3g.daishu.view.HomeMenuImageView
                        android:id="@+id/view_read_menu_2"
                        android:layout_width="0dp"
                        android:padding="12dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" />

                    <!--<ImageView-->
                    <!--android:layout_width="1dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:background="@color/text_color_10" />-->

                    <!--<com.coco3g.daishu.view.HomeMenuImageView-->
                    <!--android:id="@+id/view_read_menu_3"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center" />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:weightSum="2">

                    <com.coco3g.daishu.view.HomeMenuImageView
                        android:id="@+id/view_read_menu_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:gravity="center" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/text_color_10" />

                    <com.coco3g.daishu.view.HomeMenuImageView
                        android:id="@+id/view_read_menu_4"
                        android:layout_width="0dp"
                        android:padding="12dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" />

                    <!--<ImageView-->
                    <!--android:layout_width="1dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:background="@color/text_color_10" />-->

                    <!--<com.coco3g.daishu.view.HomeMenuImageView-->
                    <!--android:id="@+id/view_read_menu_6"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center" />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.coco3g.daishu.view.HomeMenuImageView
                        android:id="@+id/view_read_menu_5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:padding="12dp"
                        android:background="@color/white"
                        android:gravity="center" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/text_color_10"
                        android:visibility="gone" />

                    <!--<com.coco3g.daishu.view.HomeMenuImageView-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="0.5"-->
                    <!--android:gravity="center"-->
                    <!--android:visibility="gone" />-->
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</com.coco3g.daishu.view.SuperRefreshLayout>
