<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/shape_txt_red_bg"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="热议"
            android:textColor="@color/text_color_red"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_marquee_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/title_tv1"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">\

        <TextView
            android:id="@+id/title_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/shape_txt_red_bg"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="热评"
            android:textColor="@color/text_color_red"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_marquee_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/title_tv2"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>
